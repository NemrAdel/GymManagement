@using GymManagmentDAL.Models.Enums
@model CreateTrainerViewModel
    <div class="container">
        <main role="main" class="pb-3">
            <div class="container mt-4">
                <header class="mb-4">
                    <h3 class="text-primary-color">Add New Trainer</h3>
                </header>

            <form method="post" asp-controller="Trainer" asp-action="CreateTrainer">

                    <!-- Trainer Info -->
                    <div class="section-header mb-3">
                        <h5 class="text-primary fw-bold">Personal Information</h5>
                        <hr class="mt-2">
                    </div>
                    <div class="row g-3">
                        <div class="col-12 col-md-6">
                            <label class="form-label" asp-for="Name"></label>
                        <input asp-for="Name" type="text" class="form-control" />
                        </div>

                        <div class="col-12 col-md-6">
                        <label class="form-label" asp-for="Email"></label>
                        <input asp-for="Email" type="text" class="form-control" />
                        </div>

                        <div class="col-12 col-md-6">
                        <label class="form-label" asp-for="Phone"></label>
                        <input asp-for="Phone" type="text" class="form-control" />
                        </div>

                        <div class="col-12 col-md-6">
                        <label class="form-label" asp-for="DateOfBirth"></label>
                        <input asp-for="DateOfBirth" type="date" class="form-control" />
                        </div>

                        <div class="col-12 col-md-6">
                        <label class="form-label" asp-for="Gender"></label>
                        <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-select">
                                <option value="">-- Select Gender --</option>
                            </select>
                        </div>

                    </div>
                    <div class="section-header mb-3 mt-4">
                        <h5 class="text-primary fw-bold">Address Information</h5>
                        <hr class="mt-2">
                    </div>
                    <div class="row g-3">

                        <div class="col-12 col-md-6">
                        <label class="form-label" asp-for="BuildingNumber"></label>
                        <input asp-for="BuildingNumber" type="text" class="form-control" />
                        </div>

                        <div class="col-12 col-md-6">
                        <label class="form-label" asp-for="Street"></label>
                        <input asp-for="Street" type="text" class="form-control" />
                        </div>
                        <div class="col-12 col-md-6">
                        <label class="form-label" asp-for="City"></label>
                        <input asp-for="City" type="text" class="form-control" />
                        </div>
                    </div>
                    <!-- Professional Information -->
                    <div class="section-header mb-3">
                        <h5 class="text-primary fw-bold">Professional Information</h5>
                        <hr class="mt-2">
                    </div>
                    <div class="row g-3">
                        <div class="col-12">
                            <label class="form-label fw-semibold">
                                Specializations <span class="text-danger">*</span>
                            </label>

                            <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="Specialties"
                                       value="GeneralFitness" />
                                <label class="form-check-label">GeneralFitness</label>
                            </div>
                            <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="Specialties" value="Yoga" />
                                <label class="form-check-label">Yoga</label>
                            </div>
                            <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="Specialties" value="Boxing" />
                                <label class="form-check-label">Boxing</label>
                            </div>
                            <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="Specialties" value="CrossFit" />
                                <label class="form-check-label">CrossFit</label>
                            </div>
                        </div>
                    </div>

                    <footer class="d-flex justify-content-end mt-4">
                        <button type="submit" class="btn btn-fill">Add</button>
                    </footer>
            </form>

            </div>

        </main>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
